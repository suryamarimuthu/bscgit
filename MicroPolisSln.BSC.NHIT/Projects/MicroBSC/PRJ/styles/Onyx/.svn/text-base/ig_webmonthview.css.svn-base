/*
** Month Frame Oriented Classes
*/

.igmv_Month 
{  
	font-family: Verdana, Arial, Helvetica, sans-serif;
	font-size: x-small;
	
	overflow: auto;
	
	position: relative;
	
	margin: 0px;
	padding: 1px;
}

.igmv_Month table {
	border-collapse: collapse;
	border: 1px solid #000000;
}

.igmv_WeekNumber 
{
	font-size: 10pt;
	font-family: Tahoma, Verdana, Arial, Helvetica, sans-serif;
	color: #000000;
	text-align: center;
	background-color: #FFFAF0;

	border-right: 1px solid #000000;
	border-top: 1px outset;
	border-bottom: 1px outset;
	
	width: 20px;
}

.igmv_MonthDayOfWeekHeader 
{ 
	font-family: Tahoma, Verdana, Arial, Helvetica, sans-serif;
	font-size: 8pt;
	color: #000000;
	text-align: center;
	background-color: #FFFAF0;

	border-bottom: 1px solid #ACA899;
	border-top: 0px;

	cursor:default;

	height: 1%;
	line-height: 20px;	
}

.igmv_CaptionHeader {
	
	background-image: url(images/MonthHeaderCaption_bg.png);
	background-repeat: repeat-x;

	border-right: 1px solid #353635;
	border-bottom: 1px solid #353635;

	font-family: Verdana, Arial, Helvetica, sans-serif;
	font-weight: bold;	
	font-size: x-small;
	color: #FFFFFF;
	text-align: center;

	height: 1%;
	line-height: 20px;
}

/*****************************************
	Ensure CaptionHeader Styling
	----------------------------
	Table Location: first row, first column of table, igmv_CaptionHeader area
	
	Role: overrides igmv_WeekNumber styles that are
	unwanted in the igmv_CaptionHeader area.
	
	Need: igmv_WeekNumber is applied in the first row, first column of the
	table to ensure the WeekNumber width is applied 
	properly to the first column.
******************************************/
tr.igmv_CaptionHeader td.igmv_WeekNumber {
	border: 0px;
	background-color: transparent;
	line-height: 19px;
	height: 1%;
}

/*
** Day Oriented Classes
*/
.igmv_Day 
{ 
	color: #000000;
	background-color: #FFFFFF;
	background-image: url(images/cell_bg.png);
	background-repeat: repeat-x;
	background-position: bottom;

	border-right: 1px solid #000000;
	border-bottom: 1px solid #000000;

	/* Do not remove the following */
	height: 12%;
	vertical-align: top;
}

.igmv_CompressedDay 
{ 
	color: #000000;
	background-color: #FFFFFF;
	background-image: url(images/cellCompressed_bg.png);
	background-repeat: repeat-x;
	background-position: bottom;
	
	border-right: 1px solid #000000;
	border-bottom: 1px solid #000000;

	height: 4%;
}


/*
** NOTE: OtherMonthDay does not inherit from Day because Day by definition is non-Trailing. 
*/
.igmv_OtherMonthDay 
{ 
	color: #000000; 
	background-color: #FFFFFF;
	background-image: url(images/cellTrailing_bg.png);
	background-repeat: repeat-x;
	background-position: bottom;

	border-right: 1px solid #000000;
	border-bottom: 1px solid #000000;
	
	height: 12%;
	vertical-align: top;
}

.igmv_OtherCompressedDay 
{ 
	color: #000000; 
	background-color: #FFFFFF;
	background-image: url(images/cellOtherCompressed_bg.png);
	background-repeat: repeat-x;
	background-position: bottom;

	border-right: 1px solid #000000;
	border-bottom: 1px solid #000000;
	
	height: 4%;
	vertical-align: top;
}

.igmv_Today 
{
}
.igmv_ActiveDay 
{ 
}


/*
** DayHeader Oriented Classes.
*/
.igmv_DayHeader 
{
	font-family: Verdana, Arial, Helvetica, sans-serif;
	font-size: xx-small;
	color: #000000; 
	text-align: right;
	background-color: #FFFFFF;

	border-right: 1px solid #000000;

	padding-right: 2px;
	
	height: 3%;
	line-height: 17px;
	vertical-align: top;
}

/*
** NOTE: OtherMonthDayHeader does not inherit from DayHeader because DayHeader by definition is non-Trailing. 
*/
.igmv_OtherMonthDayHeader 
{
	font-family: Verdana, Arial, Helvetica, sans-serif;
	font-size: xx-small;
	color: #000000;
	text-align: right;
	background-color: #FFFFFF;
	
	border-right: 1px solid #000000;

	padding-right: 2px;

	height: 3%;
	line-height: 17px;
	vertical-align: top;
}

.igmv_TodayHeader 
{	
	background-image: url(images/TodayHeader_bg.png);
	background-repeat: repeat-x;
	background-position: top;
	
	line-height: 15px;
}

.igmv_ActiveDayHeader 
{  
	
	background-image: url(images/ActiveDayHeader_bg.png);
	background-repeat: repeat-x;
	background-position: top;
	
	padding-right: 2px;
	
	line-height: 17px;
}

/*
** Appointment Oriented Classes
*/
.igmv_Appointment 
{ 
	font-size: xx-small; 
	font-family: Tahoma, Verdana, Arial, Helvetica, sans-serif;

	margin-left: 1px;
	margin-right: 1px;
	margin-top: 1px;
	cursor: hand;

	padding-left: 2px;
}

.igmv_AllDayEvent 
{ 
	font-size: xx-small; 
	font-family: Tahoma, Verdana, Arial, Helvetica, sans-serif;
	text-align: center;

	background-color: #E5E0C1;
	border: 1px solid #000000;

	margin-top: 1px;
	margin-left: 1px;
	margin-right: 1px;
	
	cursor: hand;
}

/*
** SelectedAppointment inherits from Appointment and AllDayEvent
*/
.igmv_SelectedAppointment 
{ 
	color: #FFFFFF;
	background-color: #F29200;
}

/*
 igmv_NavigationButton is applied to both Previous and Next buttons
*/
.igmv_NavigationButton {
	background-color:Transparent;
	cursor: hand;
	margin: 0px;
	padding: 0px;
	border: 0px;
	
	position: absolute;
	top: 3px;
}

.igmv_NavigationButtonPrev
{
	left: 3px;
}

.igmv_NavigationButtonNext
{
	right: 3px;
}
