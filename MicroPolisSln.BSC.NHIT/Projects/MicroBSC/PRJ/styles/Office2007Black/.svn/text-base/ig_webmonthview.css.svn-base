/*
** Month Frame Oriented Classes
*/
.igmv_Month 
{
	
	font-family: "Segoe UI", Trebuchet MS, Verdana, Arial, Helvetica, sans-serif;
	font-size: x-small;

	overflow: auto;
	
	position: relative;
	
	margin: 0px;
	padding: 1px;
}

.igmv_Month table {
	border-collapse: collapse;
	border: 1px solid #B0B6BE;
}

.igmv_WeekNumber 
{
	font-size: 8pt;
	font-family: "Segoe UI", Trebuchet MS, Verdana, Arial, Helvetica, sans-serif;
	background-color: #DBDEE1;
	background-position:
	text-align: center;
	color: #B0B6BE;

	border-top: 1px solid #7C8B8B;

	width: 17px;
	padding: 0px;
	margin: 0px;
}

.igmv_MonthDayOfWeekHeader 
{
	font-size: 8pt;
	font-family: "Segoe UI", Trebuchet MS, Verdana, Arial, Helvetica, sans-serif;
	text-align: center;
	color: ##4C5378;

	background-color: #EBEBEB;
	/*background-image: url(images/MonthDayOfWeekHeader_bg.png);*/
	background-repeat: repeat-x;
	background-position: center;

	padding: 3px 2px 1px 0px;
	margin-left: 1px;
	margin-right: 1px;
	margin-top: 0px;
	
	/* overriding border that is set by igmv_WeekNumber */
	border-top: 0px;
	height: 1%;
	line-height: 10px;

	cursor:default;
}


.igmv_CaptionHeader {
	font-family: "Segoe UI", Trebuchet MS, Verdana, Arial, Helvetica, sans-serif;
	font-weight: bold;
	font-size: x-small;
	text-align: center;
	color: #FFFFFF;

	background-image: url(images/MonthHeaderCaption_bg.png);
	background-repeat: repeat-x;

	border: 0px;
	margin: 0px;
	padding: 0px;

	height: 1%;
	line-height: 19px;
}

/*****************************************
	Ensure CaptionHeader Styling
	----------------------------
	Table Location: first row, first column of table, igmv_CaptionHeader area
	
	Role: overrides igmv_WeekNumber styles that are
	unwanted in the igmv_CaptionHeader area.
	
	Need: igmv_WeekNumber is applied in the first row, first column of the
	table to ensure the WeekNumber width is applied 
	properly to the first column.
******************************************/
tr.igmv_CaptionHeader td.igmv_WeekNumber {
	border: 0px;
	background-color: transparent;
	line-height: 19px;
	height: 1%;
}


/*
** Day Oriented Classes
*/
.igmv_Day 
{ 
background-color: #FFFFFF;
	/*background-image: url(images/cell_bg.png);*/
	background-repeat: repeat-x;
	border-left: 1px solid #B0B6BE;
	border-top: 1px solid #B0B6BE;
	

	height: 12%;
	vertical-align: top;
	padding: 0px;
	
}

.igmv_CompressedDay 
{ 
	color: #000000; 

	background-color: #FFFFFF;
	background-image: url(images/cellCompressed_bg.png);
	background-repeat: repeat-x;
	background-position: bottom;

	border-left: 1px solid #B0B6BE;
	border-top: 1px solid #B0B6BE;

	height: 4%;
	vertical-align: top;
}

.igmv_CompressedDay .igmv_ActiveDay {
	background-image: url(images/cellCompressedActive_bg.png);
}

/*
** NOTE: OtherMonthDay does not inherit from Day because Day by definition is non-Trailing. 
*/
.igmv_OtherMonthDay 
{ 
	color: #000000; 
	background-color: #C7CBD1;

	border-left: 1px solid #B0B6BE;
	border-top: 1px solid #B0B6BE;
	border-bottom: 2px solid #9199A4;
	
	height: 12%;
	vertical-align: top;
}


.igmv_OtherCompressedDay 
{ 
	color: #000000; 
	background-color: #FFFFFF;

	border-left: 1px solid #B0B6BE;

	height: 4%;
	vertical-align: top;
}

.igmv_Today 
{
	border-left: 2px solid #EE9311;
	border-right: 2px solid #EE9311;
	border-bottom: 2px solid #EE9311;
	

}
.igmv_ActiveDay 
{ 
	background-color: #E8EAEC;
	/*background-image: url(images/cellActive_bg.png);*/
	background-position:center;
	background-repeat: repeat-x;
	background-position: top;
	font-weight:bold;
	

}


