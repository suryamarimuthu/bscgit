/*
 igmv_NavigationButton is applied to both Previous and Next buttons
*/
.igmv_NavigationButton {
	background-color:Transparent;
	cursor: hand;
	margin: 0px;
	padding: 0px;
	border: 0px;
	
	position: absolute;
	top: 3px;
}

.igmv_NavigationButtonPrev
{
	left: 3px;
}

.igmv_NavigationButtonNext
{
	right: 3px;
}